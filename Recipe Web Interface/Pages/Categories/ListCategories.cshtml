@page
@model Recipe_Web_Interface.Pages.Categories.ListCategoriesModel
@{
}
@if (@Model.ActionResult != null)
{
	<script type="text/javascript">
		Swal.fire({
			text: '@Model.ActionResult',
			toast: true,
			position: 'top-end',
			showConfirmButton: false,
			icon: 'info',
			timer: 1500
		})
	</script>
}
<div class="container d-flex justify-content-between align-items-center my-4">
	<h2>All Categories</h2>
	<a class="btn btn-primary h-25" asp-page="CreateCategory">Add a Category</a>
</div>
@{int i = 1;}
<div class="row row-cols-auto justify-content-center g-4">
	<table class="table">
		  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
	@foreach (var category in Model.CategoryList)
		{
			<tbody>
				<tr>
					<th scope="row">@i</th>
					<td>@category</td>
					<td><a class="btn btn-primary" asp-page="./EditCategory" asp-route-category="@category">
							<i class="bi bi-pencil-square"></i>
						</a></td>
					<td><a class="btn btn-danger" asp-page="./DeleteCategory" asp-route-category="@category">
							<i class="bi bi-trash"></i>
						</a>
					</td>
				</tr>
			</tbody>
			@(i++)
			}
	</table>
</div>