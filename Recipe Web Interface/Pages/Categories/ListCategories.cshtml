@page
@model Recipe_Web_Interface.Pages.Categories.ListCategoriesModel
@{
}
@if (@Model.ActionResult != null)
{
	<script type="text/javascript">
		Swal.fire({
			text: '@Model.ActionResult',
			toast: true,
			position: 'top-end',
			showConfirmButton: false,
			icon: 'info',
			timer: 1500
		})
	</script>
}
<div class="container d-flex justify-content-between align-items-center my-4">
	<h2>All Categories</h2>
	<a class="btn btn-primary h-25" asp-page="CreateCategory">Add a Category</a>
</div>

<div class="row row-cols-auto justify-content-center g-4">
	@foreach (var category in Model.CategoryList)
	{
		<div class="col">
			<div class="card text-center">
				<div class="card-body">
					<h5 class="card-title">@category</h5>
					<div class="btn-group">
						<a class="btn btn-primary" asp-page="./EditCategory" asp-route-category="@category">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a class="btn btn-danger" asp-page="./DeleteCategory" asp-route-category="@category">
							<i class="bi bi-trash"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>